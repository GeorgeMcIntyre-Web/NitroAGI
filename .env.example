# NitroAGI Environment Configuration
# Copy this file to .env and fill in your values

# ===========================
# API Keys
# ===========================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ===========================
# Database Configuration
# ===========================
# Redis for working memory and caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL for structured data
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nitroagi_dev
POSTGRES_USER=nitroagi
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://nitroagi:password@localhost:5432/nitroagi_dev

# MongoDB for document storage
MONGODB_URL=mongodb://localhost:27017/nitroagi
MONGODB_DATABASE=nitroagi

# Vector Database (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./data/chroma

# ===========================
# Message Queue Configuration
# ===========================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=nitroagi-consumer
KAFKA_AUTO_OFFSET_RESET=earliest

# Celery Configuration (Alternative to Kafka)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================
# Application Settings
# ===========================
# Environment: development, staging, production
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FILE=logs/nitroagi.log

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# ===========================
# Security Settings
# ===========================
SECRET_KEY=your_secret_key_here_use_openssl_rand_base64_32
JWT_SECRET_KEY=your_jwt_secret_here_use_openssl_rand_base64_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA_SECONDS=3600

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================
# AI Model Configuration
# ===========================
# Default models
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_VISION_MODEL=clip-vit-base-patch32
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# Model parameters
MAX_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.9
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# Model cache settings
MODEL_CACHE_DIR=./data/models
MODEL_CACHE_SIZE_GB=10

# ===========================
# Memory System Configuration
# ===========================
# Working memory settings
WORKING_MEMORY_TTL_SECONDS=3600
WORKING_MEMORY_MAX_SIZE_MB=100

# Long-term memory settings
LONG_TERM_MEMORY_ENABLED=true
EPISODIC_MEMORY_ENABLED=true
SEMANTIC_MEMORY_ENABLED=true

# Memory limits
MAX_CONVERSATION_LENGTH=100
MAX_MEMORY_ENTRIES=10000

# ===========================
# Performance Settings
# ===========================
# Threading and concurrency
MAX_WORKERS=10
THREAD_POOL_SIZE=20
ASYNC_TIMEOUT_SECONDS=30

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=500

# Request timeouts
REQUEST_TIMEOUT_SECONDS=60
INFERENCE_TIMEOUT_SECONDS=120

# ===========================
# Monitoring and Analytics
# ===========================
# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# Error tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# ===========================
# External Services
# ===========================
# Email settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=noreply@nitroagi.dev

# Webhook URLs
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ===========================
# Development Settings
# ===========================
# Hot reload
HOT_RELOAD=true

# Testing
TEST_MODE=false
TEST_DATABASE_URL=postgresql://nitroagi:password@localhost:5432/nitroagi_test

# Debugging
ENABLE_PROFILING=false
ENABLE_SQL_LOGGING=false
ENABLE_REQUEST_LOGGING=true

# ===========================
# Feature Flags
# ===========================
FEATURE_VISION_MODULE=true
FEATURE_REASONING_ENGINE=true
FEATURE_LEARNING_AGENT=true
FEATURE_ADVANCED_MEMORY=true
FEATURE_MULTI_MODAL=true
FEATURE_REAL_TIME_LEARNING=false

# ===========================
# Cloud Provider Settings
# ===========================
# AWS Settings (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Google Cloud Settings (if using)
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=

# Azure Settings (if using)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=

# ===========================
# Deployment Settings
# ===========================
# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=nitroagi
K8S_REPLICA_COUNT=3

# Railway/Vercel specific
RAILWAY_STATIC_URL=
VERCEL_URL=